<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/colorTrolleyBackground">

    <item android:id="@android:id/mask" android:drawable="@color/colorTrolleyBackground"/>

    <item android:id="@android:id/background">

        <layer-list>

            <item android:right="9dp" android:left="9dp">
                <shape android:shape="rectangle">
                    <stroke
                        android:width="2dp"
                        android:color="@color/colorTrolley"/>
                </shape>
            </item>

            <item android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white"/>
                </shape>
            </item>

        </layer-list>

    </item>

</ripple>